<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".scientificModeFragment"
    >
    <TableLayout
        android:id = "@+id/buttonField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:text="sin"
                android:textFontWeight="1"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="cos"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="tg"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="ctg"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:text="arsin"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="arcos"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="("
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text=")"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:text="sqrt"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="^"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="ln"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button android:text="lg"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</LinearLayout>